{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "http://cv-website.azurewebsites.net/wp-content/uploads/2018/10/codiauto.png",
              "size": "Small"
            }
          ],
          "width": "50px"
        },
        {
          "type": "Column",
          "horizontalAlignment": "Center",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "horizontalAlignment": "Left",
              "height": "stretch",
              "size": "Medium",
              "weight": "Bolder",
              "text": "Codi Key is Invalid"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "I checked the key you provided and its not a valid key, contact Codi Support.",
      "isSubtle": true,
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "continue",
      "title": "Continue in Demo",
      "data": {
        "license": "demo"
      }
    },
    {
      "type": "Action.Submit",
      "id": "reenter",
      "title": "ReEnter Code",
      "data": {
        "register": "true"
      }
    },
    {
      "type": "Action.OpenUrl",
      "id": "opencodisupport",
      "title": "Go to Support",
      "url": "www.cloudvalley.io"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}