{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "http://cv-website.azurewebsites.net/wp-content/uploads/2018/10/codiauto.png",
                            "size": "Small"
                        }
                    ],
                    "width": "50px"
                },
                {
                    "type": "Column",
                    "horizontalAlignment": "Center",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Left",
                            "height": "stretch",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "License Codi"
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Please provide your license key to start working with Codi",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "id": "LicKey",
            "placeholder": "Company Key"
        },
        {
            "type": "Input.Toggle",
            "id": "AcceptsTerms",
            "title": "I accept the terms and conditions (True/False)",
            "value": "false"
        }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "id": "register",
        "title": "Register",
        "data": {
          "register": "true"
        }
      },
        {
            "type": "Action.Submit",
            "id": "demo",
            "title": "Demo",
            "data": {
                "demo": "true"
            }
        },
        {
            "type": "Action.OpenUrl",
            "id": "buy",
            "title": "Buy",
            "url": "www.cloudvalley.io"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}