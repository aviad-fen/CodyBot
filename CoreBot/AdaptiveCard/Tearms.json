{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "http://cv-website.azurewebsites.net/wp-content/uploads/2018/10/codiauto.png",
              "size": "Small"
            }
          ],
          "width": "50px"
        },
        {
          "type": "Column",
          "horizontalAlignment": "Center",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "horizontalAlignment": "Left",
              "height": "stretch",
              "size": "Medium",
              "weight": "Bolder",
              "text": "License Codi"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "You Must accept terms in order to use Codi, for more information visit our website.",
      "isSubtle": true
    },
    {
      "type": "Input.Toggle",
      "id": "AcceptsTerms",
      "title": "I accept the terms and conditions (True/False)",
      "value": "false"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "continue",
      "title": "continue",
      "data": {
        "terms": "true"
      }
    },
    {
      "type": "Action.OpenUrl",
      "id": "Terms of Service",
      "title": "Terms of Service",
      "url": "www.cloudvalley.io"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}